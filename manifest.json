{
  "manifest_version" : 2,

  "name": "Canard PC Dashboard + TLS",
  "short_name": "CPC Dashboard+TLS",
  "description" : "Suivez les notifications de votre tableau de bord Canard PC. Maintenant avec des vrais morceaux de TLS !",
  "author": "Panchocolatine",
  "version" : "1.0.1",

  "applications": {
    "gecko": {
      "id": "dashboard@cpc.pancho",
      "strict_min_version": "52.0"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

   "browser_action": {
    "default_icon": {
      "19": "images/badge19/snif.png",
      "38": "images/badge38/snif.png"
    },
    "default_title": "CPC Dashboard",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "browser_style": true
  },

  "permissions" : [
    "http://forum.canardpc.com/*",
    "https://forum.canardpc.com/*",
    "https://duckduckgo.com/*",
    "https://www.qwant.com/*",
    "https://www.google.fr/*",
    "alarms",
    "tabs"
  ]
}
